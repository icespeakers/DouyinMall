<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.example.userservice.dao.IUserDao">


    <select id="queryUserByEmail" resultType="java.lang.Integer">
        select id from user
        where email = #{email}
    </select>
    <select id="queryUserByEmailAndPassword" resultType="java.lang.Integer">
                select id from user
                where email = #{email} and password = #{password} and status=0
    </select>
    <insert id="insert">
        insert into user(email, password) values (#{email}, #{password})
    </insert>
    <update id="addBlackList">
        update user set status = 1 where id = #{userId}
    </update>
    <update id="delete">
        update user set status = 2 where id = #{userId}
    </update>
</mapper>